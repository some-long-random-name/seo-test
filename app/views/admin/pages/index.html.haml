%ol.breadcrumb
  %li.active Pages

= form_for @page, url: [:admin, @page], html: { class: 'form-inline' } do |f|
  .form-group
    = f.text_field :title, placeholder: 'Page title', class: 'form-control'
  .form-group
    = f.text_field :slug, placeholder: 'Page slug', class: 'form-control'
  = f.submit class: 'btn btn-success btn-sm'

%table.table
  %thead
    %tr
      %th Page title
      %th Url
      %th
      %th
  - @pages.each do |page|
    %tr
      %td= link_to page.title, [:admin, page]
      %td
        %code= page_path(page.slug)
      %td
        = btn 'Edit', [:edit, :admin, page], icon: :edit
      %td
        = btn 'Delete', [:admin, page], method: :delete, data: { confirm: 'Sure?' }, icon: :trash, style: :danger
